<Window x:Class="WpfHelloApp.MainWindowGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Привет, WPF (Grid версия)"
        Width="400"
        Height="250"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Click="MenuExit_Click"/>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="О программе" Click="MenuAbout_Click"/>
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Text="Добро пожаловать в первое WPF-приложение!"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       Margin="10"/>

            <Button Grid.Row="1"
                    Grid.Column="0"
                    Content="Привет"
                    Margin="10,5,5,10"
                    Padding="10,5"
                    Click="HelloButton_Click"/>

            <Button Grid.Row="1"
                    Grid.Column="1"
                    Content="Выход"
                    Margin="5,5,10,10"
                    Padding="10,5"
                    Click="ExitButton_Click"/>
        </Grid>
    </DockPanel>

</Window>
