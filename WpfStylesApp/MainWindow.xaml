<Window x:Class="WpfStylesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа 29 - Стили в WPF"
        Width="500"
        Height="300"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Демонстрация стилей в WPF"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <Button Content="Зелёная стилизованная кнопка"
                    Style="{StaticResource GreenButton}"
                    Click="GreenButton_Click"/>

            <Button Content="Стандартная кнопка"
                    Width="250"
                    Height="40"
                    Margin="10"
                    Click="StandardButton_Click"/>

            <TextBlock x:Name="lblMessage"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"
                       Foreground="#FF1976D2"/>

        </StackPanel>
    </Grid>

</Window>
