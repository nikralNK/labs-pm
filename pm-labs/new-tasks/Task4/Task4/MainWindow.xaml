<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Первый массив (через запятую):" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="Array1TextBox" Height="30" Margin="0,0,0,20"/>

            <TextBlock Text="Второй массив (через запятую):" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="Array2TextBox" Height="30" Margin="0,0,0,20"/>

            <Button Content="Объединить массивы" Height="35" Click="MergeButton_Click" Margin="0,0,0,20"/>

            <TextBlock Text="Результат:" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="ResultTextBox" Height="30" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
