<Window x:Class="Task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Введите строку:" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="InputTextBox" Height="30" FontSize="14" Margin="0,0,0,20"/>
            <Button Content="Проверить палиндром" Height="35" Click="CheckButton_Click" Margin="0,0,0,20"/>
            <TextBlock Text="Результат:" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="ResultTextBox" Height="30" FontSize="14" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
