<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Выберите элемент для создания:" FontSize="14" Margin="0,0,0,10"/>
            <RadioButton x:Name="TextBoxRadio" Content="TextBox" IsChecked="True" Margin="0,0,0,5"/>
            <RadioButton x:Name="ButtonRadio" Content="Button" Margin="0,0,0,5"/>
            <RadioButton x:Name="LabelRadio" Content="Label" Margin="0,0,0,15"/>
            <Button Content="Создать элемент" Height="30" Click="CreateElement_Click"/>
        </StackPanel>

        <StackPanel x:Name="ElementsPanel" Grid.Row="1" Orientation="Horizontal" Margin="20,0,20,20" HorizontalAlignment="Left"/>
    </Grid>
</Window>
