<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Введите числа через запятую:" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="InputTextBox" Height="30" Margin="0,0,0,20"/>
            <Button x:Name="CalculateButton" Content="Вычислить сумму нечётных" Height="35" Click="CalculateButton_Click" Margin="0,0,0,20"/>
            <TextBlock Text="Массив чисел:" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="ArrayTextBox" Height="30" IsReadOnly="True" Margin="0,0,0,20"/>
            <TextBlock Text="Результат:" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="ResultTextBox" Height="30" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
