<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Введите два слова через пробел:" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="InputTextBox" Height="30" FontSize="14" Margin="0,0,0,20"/>
            <Button Content="Поменять слова местами" Height="35" Click="SwapButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
