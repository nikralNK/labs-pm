<Window x:Class="Task8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Button Content="Сгенерировать массив" Height="35" Click="GenerateButton_Click" Margin="0,0,0,20"/>

            <TextBlock Text="Исходный массив:" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="ArrayTextBox" Height="30" IsReadOnly="True" Margin="0,0,0,20"/>

            <TextBlock Text="Введите n:" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="NTextBox" Height="30" Margin="0,0,0,20"/>

            <Button Content="Заменить числа > n" Height="35" Click="ReplaceButton_Click" Margin="0,0,0,20"/>

            <TextBlock Text="Результат:" FontSize="14" Margin="0,0,0,10"/>
            <TextBox x:Name="ResultTextBox" Height="30" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
